<div class="col-md-12">
    <div class="show-users"> 
        <ul class="col-md-12">
            <% @users.each do |user| %>
                <li>
                    <div class="row">
                        <div class="col-md-2">
                            <%= image_tag 'default.png' %>
                        </div>
                        <div class="col-md-4 mx-auto">
                            <p><%= link_to user.name, user %></p>
                        </div>
                        <div class="col-md-4">
                            <p>投降した画像一覧</p>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
    <%= paginate @users %>
</div>